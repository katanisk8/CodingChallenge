@model DataVieModel

@using (Html.BeginForm("FindInformations", "Home", FormMethod.Post))
{
    <p>Fill address input below:</p>

    <div class="form-inline">
        <div class="col-4">
            @Html.LabelFor(x => x.Address)
        </div>
        <div class="col-8">
            @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-inline">
        <div class="col-4">
            @Html.LabelFor(x => x.Country)
        </div>
        <div class="col-8">
            @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Country)
        </div>
    </div>
    <div class="button-div">
        <input type="submit" class="btn btn-primary" value="Get informations">
    </div>
}
@model SmartyStreetViewModel

@using (Html.BeginForm("SmartyStreet", "Home", FormMethod.Post))
{
    <div class="form-group">
        <div class="form-inline">
            <div class="col-4">
                @Html.LabelFor(x => x.Geocode)
            </div>
            <div class="col-8">
                @Html.CheckBoxFor(x => x.Geocode, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-inline">
            <div class="col-4">
                @Html.LabelFor(x => x.Organization)
            </div>
            <div class="col-8">
                @Html.TextBoxFor(x => x.Organization, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-inline">
            <div class="col-4">
                @Html.LabelFor(x => x.Address1)
            </div>
            <div class="col-8">
                @Html.TextBoxFor(x => x.Address1, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-inline">
            <div class="col-4">
                @Html.LabelFor(x => x.Address2)
            </div>
            <div class="col-8">
                @Html.TextBoxFor(x => x.Address2, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-inline">
            <div class="col-4">
                @Html.LabelFor(x => x.Locality)
            </div>
            <div class="col-8">
                @Html.TextBoxFor(x => x.Locality, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-inline">
            <div class="col-4">
                @Html.LabelFor(x => x.AdministrativeArea)
            </div>
            <div class="col-8">
                @Html.TextBoxFor(x => x.AdministrativeArea, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-inline">
            <div class="col-4">
                @Html.LabelFor(x => x.Country)
            </div>
            <div class="col-8">
                @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Country)
            </div>
        </div>
        <div class="form-inline">
            <div class="col-4">
                @Html.LabelFor(x => x.PostalCode)
            </div>
            <div class="col-8">
                @Html.TextBoxFor(x => x.PostalCode, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary btn-block" value="Get informations">
        </div>
    </div>
}
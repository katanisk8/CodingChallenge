@model SearchedDataVieModel

@using (Html.BeginForm("FindInformations", "Home", FormMethod.Post))
{
    <p>Fill address input below:</p>

    <div class="form-inline">
        <div class="col-4">
            @Html.LabelFor(x => x.OneLineAddress)
        </div>
        <div class="col-8">
            @Html.TextBoxFor(x => x.OneLineAddress, new { @class = "form-control" })
            <p style="font-size: smaller">The entire address in a single field (without the country). If freeform is specified, all other address input fields (except country) will be ignored.</p>
        </div>
    </div>
    <div class="form-inline">
        <div class="col-4">
            @Html.LabelFor(x => x.Address.Country)
        </div>
        <div class="col-8">
            @Html.TextBoxFor(x => x.Address.Country, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Address.Country)
        </div>
    </div>

    <p>or fill more inputs below to get more informations:</p>

    <div class="form-group">
        <div class="form-inline">
            <div class="col-4">
                @Html.LabelFor(x => x.Organization)
            </div>
            <div class="col-8">
                @Html.TextBoxFor(x => x.Organization, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-inline">
            <div class="col-4">
                @Html.LabelFor(x => x.Address.Address1)
            </div>
            <div class="col-8">
                @Html.TextBoxFor(x => x.Address.Address1, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-inline">
            <div class="col-4">
                @Html.LabelFor(x => x.Address.Address2)
            </div>
            <div class="col-8">
                @Html.TextBoxFor(x => x.Address.Address2, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-inline">
            <div class="col-4">
                @Html.LabelFor(x => x.Address.Locality)
            </div>
            <div class="col-8">
                @Html.TextBoxFor(x => x.Address.Locality, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-inline">
            <div class="col-4">
                @Html.LabelFor(x => x.Address.AdministrativeArea)
            </div>
            <div class="col-8">
                @Html.TextBoxFor(x => x.Address.AdministrativeArea, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-inline">
            <div class="col-4">
                @Html.LabelFor(x => x.Address.PostalCode)
            </div>
            <div class="col-8">
                @Html.TextBoxFor(x => x.Address.PostalCode, new { @class = "form-control" })
            </div>
        </div>

        <div class="button-div">
            <input type="submit" class="btn btn-primary" value="Get informations">
        </div>
    </div>
}